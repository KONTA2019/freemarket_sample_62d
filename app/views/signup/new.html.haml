= form_for @user, url: signup_index_path, method: :post, html: {class: 'first-main__box'} do |f|
  = f.text_field :nickname, placeholder: '例) メルカリ太郎'
  = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
  = f.password_field :password, placeholder: '6文字以上'
  = f.password_field :password_confirmation, placeholder: '6文字以上'
  = f.text_field :last_name, placeholder: '例) 山田'
  = f.text_field :first_name, placeholder: '例) 彩'
  = f.text_field :last_name_kana, placeholder: '例) ヤマダ'
  = f.text_field :zipcode, placeholder: '例) 111-1111'
  = f.text_field :pref, placeholder: '例) 東京都'
  = f.text_field :city, placeholder: '例) 渋谷区'
  = f.text_field :address, placeholder: '例) 神南 1-14-17'
  = f.text_field :buildingname, placeholder: '例)FRAME '
  = f.text_field :phone, placeholder: '例) 0120-444-444'
  = f.text_field :birthyear, placeholder: '例) 2020'
  = f.text_field :birthmonth, placeholder: '例) 2'
  = f.text_field :birthday, placeholder: '例) 20'

