.header
  .header__top
    .header__top__logo
      = link_to image_tag('logo/logo.png', height: '40px', alt: 'ロゴ'), '#'
    .header__top__search
      = form_with url: 'root' do |f|
        = f.text_field :text, placeholder: 'キーワードから探す'
        = f.submit 
        
  .header__nav
    .header__nav__left
      %ul
        %li.header__nav__left__list<
          = link_to '#' do
            カテゴリー
        %li.header__nav__left__list<
          = link_to '#' do
            ブランド
    .header__nav__right
      %ul
        %li.header__nav__right__list<
          = link_to '#' do
            ログイン
        %li.header__nav__right__list<
          = link_to '#' do
            新規会員登録