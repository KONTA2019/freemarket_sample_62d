= render "shared/top-header"

.confirm-product
  .confirm-group
    %h1 購入内容の確認
    .confirm-group__form
      .confirm-group__form__main
        .confirm-group__form__main__pict
          .confirm-group__form__main__pict__frame
            = image_tag(@item.images.first, width: '100%', height: '100%', alt: '商品画像')
          %h2= @item.name
        .confirm-group__form__main__price
          %p= "¥ " + @item.price.to_s(:delimited)
          %span 送料込み
        .confirm-group__form__main__point ポイントはありません
        .confirm-group__form__main__buy-price
          %p 支払い金額
          %p.buy-price-table 
          = "¥ " + @item.price.to_s(:delimited)
        = form_tag(action: :pay, "data-turbolinks": false,method: :post) do
          %button 購入する
    .user-info
      .user-info__main
        %h3 配送先
        %address.user-info__main__text
          〒542-0076  
          %br 大阪府大阪市中央区難波5丁目1−60
          なんばスカイオ15階
        %a.user-info__main__fix 変更する
    .user-info
      .user-info__main
        %h3 支払い方法
        %p.user-info__main__text
          = "************" + @default_card_information.last4
          %br 
          = "有効期限 " + @default_card_information.exp_month.to_s + " / " + @default_card_information.exp_year.to_s.slice(2,3)

= render "shared/top-footer"



