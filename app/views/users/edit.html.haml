.header
  = render 'shared/top-header'
- breadcrumb :mypage
= render "shared/hogehoge"
.mypage
  .mypage__row
    .mypage__row__right
      .mypage__row__right__main
        %h2.mypage__row__right__main__title
          = "#{@user.nickname}さんのマイページ"

        .mypage__row__right__main__archive
          %h3.mypage__row__right__main__archive__title
            最近見た商品
          .mypage__row__right__main__archive__body
            = image_tag src="https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png", size: "200×200"

    .mypage__row__sidebar
      = render 'shared/side_bar'
.footer
  = render 'shared/top-footer'